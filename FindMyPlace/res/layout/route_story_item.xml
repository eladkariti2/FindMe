<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f3dc"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp" >

    <TextView
        android:id="@+id/route_story_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1256e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/route_story_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="10 minitues"
            android:textColor="#1256e8" />

        <TextView
            android:id="@+id/route_story_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="10 KM"
            android:textColor="#1256e8" />
    </LinearLayout>

    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#343d0e"></LinearLayout>
</LinearLayout>