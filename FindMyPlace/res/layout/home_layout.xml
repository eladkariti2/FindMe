<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp" >

        <RelativeLayout
            android:id="@+id/save_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_button_bg_selector"
            android:padding="15dp" >

            <TextView
                android:id="@+id/save_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/save_location"
                android:textColor="#a0a0a0"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/save_location_title"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:src="@drawable/save_location_img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_route"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/home_button_bg_selector"
            android:padding="15dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/get_directions"
                android:textColor="#000000"
                android:textSize="22dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>